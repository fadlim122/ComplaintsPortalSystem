@model ComplaintPortalSystem.Models.ComplaintHandler

@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        body {
            background: rgba(0,0,0,0.6);
        }

        #bg {
            z-index: 1;
            background-color: white;
            padding: 35px;
            margin-bottom: 90px;
            width: 90%;
            border-radius: 5px;
            padding-top: 40px;
        }

            #bg:before {
                content: "";
                position: absolute;
                z-index: -1;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                background-image: url(https://www.universitiesaustralia.edu.au/wp-content/uploads/2019/05/Murdoch1_web-1333x1000.jpg);
                background-size: 100% 98.9%;
                background-repeat: no-repeat;
                opacity: 0.15;
            }

        header h2 {
            color: white;
            font-family: Verdana;
            padding-top: 15px;
            padding-bottom: 20px;
        }

        dl dt, dd {
            padding: 0;
            margin-left: 1vw;
            margin-right: 22px;
            margin-bottom: 7px;
        }

        #edit {
            background: #b81818;
            color: #ffffff;
            padding-left: 12px;
            padding-right: 12px;
            padding-top: 7px;
            padding-bottom: 7px;
            margin-top: 1vw;
            margin-left: 9.2vw;
            margin-right: 10px;
            border: none;
            width: 85px;
            border-radius: 3px;
        }

            #edit :hover {
                background: #a71111;
            }

        #btl {
            background: #969292;
            color: #ffffff;
            padding-left: 12px;
            padding-right: 12px;
            padding-top: 7px;
            margin-top: 1vw;
            padding-bottom: 7px;
            border: none;
            width: 110px;
            border-radius: 3px;
        }

            #btl :hover {
                background: #747373;
            }
    </style>
</head>


<body>

    <header>
        <h2>Account Details</h2>
    </header>
    <hr style="border:0.6px solid #dbd9d9;" />



    <div id="bg">

        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.AccountHolder.ID)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AccountHolder.ID)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.AccountHolder.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AccountHolder.Name)
                </dd>

                <dt>
                    Department
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Department.Name)
                </dd>
                <dt>
                    Supervisor
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Supervisor.AccountHolder.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.AccountHolder.Role)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AccountHolder.Role)
                </dd>

            </dl>
            <div class="form-group">
                @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary", id = "edit" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary", id = "btl" })

            </div>
        </div>
    </div>

</body>
</html>