@model IEnumerable<ComplaintPortalSystem.Models.HandlerAssignment>
@using ComplaintPortalSystem.Models
@using ComplaintPortalSystem.Common
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            background: rgba(0,0,0,0.6);
        }

        #bg {
            z-index: 1;
            background-color: white;
            padding: 30px;
            margin-bottom: 90px;
        }

            #bg:before {
                content: "";
                position: absolute;
                z-index: -1;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                background-image: url(https://www.universitiesaustralia.edu.au/wp-content/uploads/2019/05/Murdoch1_web-1333x1000.jpg);
                background-size: 100% 98.9%;
                background-repeat: no-repeat;
                opacity: 0.15;
            }

        header h2 {
            color: white;
            font-family: Verdana;
            padding-top: 15px;
            padding-bottom: 20px;
        }

        .button {
            background-color: #eaebec;
            color: #1367c5;
            border: none;
            padding: 10px;
            padding-left: 20px;
            padding-right: 20px;
            font-weight: 500;
            font-family: Verdana;
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.2);
        }

            .button:hover {
                background-color: #4a8edb;
                color: #e7e7e7;
            }

        .btn-primary {
            background-color: #f1f2f2;
            color: #0d8ddb;
            border: none;
            padding-left: 15px;
            padding-right: 15px;
            font-weight: 500;
            font-family: Verdana;
            font-size: 14px;
        }

            .btn-primary:hover {
                background-color: #2192d6;
                color: #e7e7e7;
            }

        .table {
            margin-top: 30px;
        }

        @@media only screen and (max-width: 1000px) {
            #bg {
                white-space: nowrap;
                overflow: scroll;
            }
        }
    </style>
</head>

<body>
    <header>
        <h2>Response Ticket</h2>
    </header>
    <hr style="border: 0.6px solid #dbd9d9;" />



    <div id="bg">
        <p>
            @Html.ActionLink("Email", "Index", "Email", new { id = UserSession.UserId }, new { @class = "button" })
        </p>


        <table class="table table-striped">
            <tr>
                <th>
                    Complaint ID
                </th>
                <th>
                    Title
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remark)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResponseDate)
                </th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ComplaintID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Complaint.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remark)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResponseDate)
                    </td>
                    <td>
                        @Html.ActionLink("Response", "Response", new { id = item.ComplaintID }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
</html>

