.modal-login {
    width: 550px;
    height: 600px;
    margin-bottom: 5vw;
}

    .modal-login, .modal-content {
        margin-top: 2.5vw;
        border-radius: 5px;
        border: none;
    }

.modal-header {
    background-color: #b81818;
    color: white !important;
    text-align: center;
    font-size: 20px;
}


.modal-login .form-group {
    margin-bottom: 35px;
}

.modal-login label {
    font-weight: bold;
    font-size: 14px;
}

.modal-login .form-control {
    min-height: 38px;
    padding-left: 5px;
    box-shadow: none !important;
    border-width: 0 0 1px 0;
    border-radius: 0;
    max-width: 100%;
}

    .modal-login .form-control:focus {
        border-color: red;
    }

.modal-login .btn {
    font-size: 15px;
    font-weight: bold;
    background: #b81818;
    border-radius: 3px;
    border: none;
    min-width: 140px;
    outline: none !important;
    margin-top: 15px;
}

    .modal-login .btn:hover, .modal-login .btn:focus {
        background: #a71111;
    }


.modal-login .hint-text {
    text-align: right;
    font-size: 13px;
}

.modal-login .input-group .input-group-addon {
    background: white;
    border: none;
    padding: 0;
    margin: 0;
}

    .modal-login .input-group .input-group-addon .fa-eye-slash {
        background: white;
    }


.text-danger {
    margin-left: 22vw;
    margin-top: 30px;
    background-color: transparent;
    font-weight: 500 !important;
    color: white !important;
}



@@media only screen and (max-width: 580px) {
    .modal-login {
        width: 350px;
        margin-top: 7vw;
    }



    .text-danger {
        margin-left: 3.5vw;
    }

}
