@model ComplaintPortalSystem.Models.Complaint

@{
    ViewBag.Title = "Feedback";
}
<h2>Feedback</h2>
<br />
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Please rate our system</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   
    <p>Please rate the speed of experiencing our complaint system:</p>


    <div class="editor-field">
        @Html.RadioButtonFor(model => model.RatingSpeed, "1") Poor
        @Html.RadioButtonFor(model => model.RatingSpeed, "2") Fair
        @Html.RadioButtonFor(model => model.RatingSpeed, "3") Good
        @Html.RadioButtonFor(model => model.RatingSpeed, "4") Very Good
        @Html.RadioButtonFor(model => model.RatingSpeed, "5") Excellent
    </div>
    <br />
    <br />

    <p>Please rate the Efficacy of experiencing our complaint system:</p>
    <div class="editor-field">
        @Html.RadioButtonFor(model => model.RatingEfficacy, "1") Poor
        @Html.RadioButtonFor(model => model.RatingEfficacy, "2") Fair
        @Html.RadioButtonFor(model => model.RatingEfficacy, "3") Good
        @Html.RadioButtonFor(model => model.RatingEfficacy, "4") Very Good
        @Html.RadioButtonFor(model => model.RatingEfficacy, "5") Excellent
    </div>
    <br />
    <br />

    <p>Please rate the Friendliness of experiencing our complaint system:</p>
    <div class="editor-field">
        @Html.RadioButtonFor(model => model.RatingFriendliness, "1") Poor
        @Html.RadioButtonFor(model => model.RatingFriendliness, "2") Fair
        @Html.RadioButtonFor(model => model.RatingFriendliness, "3") Good
        @Html.RadioButtonFor(model => model.RatingFriendliness, "4") Very Good
        @Html.RadioButtonFor(model => model.RatingFriendliness, "5") Excellent
    </div>

    <br />
    <br />

    <p>Please provide us a feedback of experiencing our complaint system:</p>
    <div>

        @Html.TextAreaFor(model => model.RatingFeedback, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 90%;", placeholder = "Provide us a feedbacks" })
    </div>

    <br />
    <br />
    <div>
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</div>
    
    
}








