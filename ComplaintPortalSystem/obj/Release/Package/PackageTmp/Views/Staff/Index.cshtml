@model IEnumerable<ComplaintPortalSystem.Models.Staff>

@{
    ViewBag.Title = "Index";
}

    <h2>Register Staff Account</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccountHolder.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountHolder.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobDesignation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountHolder.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountHolder.Password)
        </th>

        <th>Action</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.AccountHolder.ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AccountHolder.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.JobDesignation)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AccountHolder.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AccountHolder.Password)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
